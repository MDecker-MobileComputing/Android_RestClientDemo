<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView android:id="@+id/zufallsnamenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="#F0F0F0"
        android:textSize="20sp"
        android:layout_above="@+id/starteZufallsnamenRequestButton"
        android:text="@string/kurzanleitung_zufallsnamen" />

    <Button android:id="@id/starteZufallsnamenRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="onStartButtonBetaetigt"
        android:text="@string/button_zufallsnamen_start" />

</RelativeLayout>